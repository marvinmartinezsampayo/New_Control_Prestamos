@model Comun.DTO.Seguridad.LoginDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Login - Prestamos</title>
   
    <!-- Bootstrap 5 CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap5.0.2.min.css" rel="stylesheet" />   
    <link href="~/css/estiloslogin.css" rel="stylesheet" />
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">

        <!-- Carousel de imágenes de fondo -->
        <div id="carouselExampleAutoplaying" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/img/imagenes/1.png" class="d-block w-100" alt="Image 1">
                </div>
                <div class="carousel-item">
                    <img src="~/img/imagenes/2.png" class="d-block w-100" alt="Image 2">
                </div>
                <div class="carousel-item">
                    <img src="~/img/imagenes/3.png" class="d-block w-100" alt="Image 3">
                </div>
                <div class="carousel-item">
                    <img src="~/img/imagenes/4.jpeg" class="d-block w-100" alt="Image 4">
                </div>
                <div class="carousel-item">
                    <img src="~/img/imagenes/5.jpeg" class="d-block w-100" alt="Image 5">
                </div>
            </div>
        </div>

        

        <div id="layoutAuthentication_content">               
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Inicio de sesión</h3></div>
                                <div class="card-body">
                                    <form class="" id="loginform" asp-action="Login" method="post" asp-route-returnurl="@ViewData["ReturnUrl"]">
                                        <div class="form-floating mb-3">
                                            <input asp-for="Usuario" type="text" class="form-control" placeholder="Usuario" required />
                                            <span asp-validation-for="Usuario" class="text-yellow"></span>                                            
                                            <label for="Usuario">Usuario</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input asp-for="Clave" class="form-control" type="password" placeholder="Contraseña" required />
                                            <span asp-validation-for="Clave" class="text-yellow"></span>
                                           @*  <input class="form-control" id="inputPassword" type="password" placeholder="Password" />*@
                                            <label for="Clave">Contreseña</label>
                                        </div>
                                        <div class="mt-4 mb-0">
                                            <div class="row">
                                                <div class="col-12">
                                                    <button class="btn btn-primary w-100 " type="submit">Ingresar</button>
                                                </div>
                                                <div class="col-12">
                                                    <a class="small w-100 text-center" href="password.html">¿Has olvidado tu contraseña?</a>
                                                </div>
                                            </div>
                                            
                                           @*  <a class="btn btn-primary" type="submit">Ingresar</a> *@
                                          
                                        </div>
                                        <div style="margin-bottom: -15px;" class="text-yellow" asp-validation-summary="All"></div>
                                    </form>
                                </div>
@*                                 <div class="card-footer text-center py-3">
                                    <div class="small"><a href="register.html">Need an account? Sign up!</a></div>
                                </div> *@
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        
       @*  <div id="layoutAuthentication_footer">
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">Copyright &copy; Sistema Información Créditos 2024</div>
                        <div>
                            <a href="#">Privacy Policy</a>
                            &middot;
                            <a href="#">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div> *@
    </div>  
    
    <!-- Bootstrap 5 JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap5.0.2.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/fontawesomeall.js"></script>    
    <script src="~/js/scripts.js"></script>        
</body>
</html>
