@{
    ViewData["Title"] = "Home Page";
}

<!-- imprtar Styles -->

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/lib/Home/css/HomeStyles.css" />


<body class="d-flex flex-column min-vh-100">

    <!-- LOADER -->
    <div id="loader" class="loader-container">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>


        <div class="container-fluid p-0 fade-in">
            <!-- HEADER -->
            <header class="bg-gradient-primary text-white text-center py-3 mb-4 shadow" style="background: linear-gradient(135deg, #007bff, #0056b3);">
                <div class="container">
                <!--    <i class="bi bi-house-door-fill display-1 mb-1"></i>-->
                    <h5 class="display-2 fw-bold typewriter animated-title">Bienvenido al Sistema de Préstamos</h5>

                    <p class="lead">Gestione, solicite y consulte sus préstamos de forma fácil y segura</p>
                </div>
            </header>

            <!-- BODY -->
            <div class="container my-5  mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-10">
                        <div class="card shadow-lg border-0 rounded-4 card-hover">
                            <div class="card-body p-5">
                                <h3 class="card-title mb-4"><i class="bi bi-ui-checks-grid me-2"></i> ¿Qué desea hacer hoy?</h3>
                                <ul class="list-group list-group-flush fs-5">
                                    <li class="list-group-item"><i class="bi bi-search me-2 text-primary"></i>Consultar solicitudes realizadas</li>
                                    <li class="list-group-item"><i class="bi bi-pencil-square me-2 text-success"></i>Crear una nueva solicitud de préstamo</li>
                                    <li class="list-group-item"><i class="bi bi-bar-chart-line me-2 text-warning"></i>Ver el estado de su solicitud</li>
                                </ul>
                                <div class="mt-4 text-muted fst-italic">
                                    <i class="bi bi-lightbulb-fill text-info me-2"></i>Use el menú lateral para acceder a cada módulo del sistema.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- FOOTER -->
            <footer class="bg-dark text-white text-center py-2 shadow-sm mt-3">
                <div class="container">
                    <small><i class="bi bi-c-circle me-1"></i>2025 Sistema de Préstamos | Desarrollado por el Grupo de Software</small><br />
                    <small><i class="bi bi-envelope-fill me-1"></i>Contacto: soporte@sistemaprestamos.com</small>
                </div>
            </footer>
        </div>
   
</body>
<script src="~/lib/Home/js/Home.js"></script>

