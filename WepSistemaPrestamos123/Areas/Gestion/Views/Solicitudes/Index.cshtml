                                                        <th scope="col">Fecha Solicitud</th>
                                                        <th scope="col">Monto</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (solicitudesRevi != null && solicitudesRevi.Any())
                                                    {
                                                        @foreach (var solicitud in solicitudesRevi)
                                                        {
                                                            <tr>
                                                                <th scope="row" class="d-flex justify-content-center align-items-center">
                                                                    <button type="button" class="btn btn-primary btn-sm" title="Ver">
                                                                        <i class="bi bi-eye-fill"></i>
                                                                    </button>
                                                                </th>
                                                                <td>@solicitud.NombreCompleto</td>
                                                                <td>@solicitud.NumeroIdentificacion.ToString("N0")</td>
                                                                <td>@solicitud.Celular</td>
                                                                <td>@solicitud.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                                                                <td>@(solicitud.Monto.ToString("C", new System.Globalization.CultureInfo("es-CO")) ?? "N/A")</td>
                                                            </tr>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td colspan="6" class="text-center text-muted">
                                                                <i class="bi bi-inbox"></i>
                                                                No se encontraron solicitudes
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div> 

