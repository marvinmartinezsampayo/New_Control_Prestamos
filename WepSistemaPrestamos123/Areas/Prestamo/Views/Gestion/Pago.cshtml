@using Comun.DTO.Generales
@using Comun.DTO.Prestamo
@{
    Layout = "_Layout";
    ViewData["Title"] = "Prestamos Pagos";
}


<link href="~/lib/bootstrap/dist/css/bootstrap-icons.min.css" rel="stylesheet" />

<style>
    .nav-link.active {
        color: #000 !important;
    }
</style>


<body class="bg-light">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-11">
                <div class="text-center mb-5">
                    <h1 class="display-6 fw-bold text-primary">
                        <i class="bi bi-currency-exchange me-2"></i>
                        Consulta y Registro de Pagos
                    </h1>
                    <p class="lead text-muted">Sistema de Prestamos Florencia</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="row">
                <div class="col-12 mb-4">
                    <div class="alert alert-info d-flex align-items-center" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <div style="text-align: justify">
                            Bienvenido al panel de consulta y registro de pagos. Aquí encontrarás un resumen de los prestamos y los aportes que les ha realizado un cliente.
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Consultar prestamos cliente.
                </div>

                <div class="row">
                    <!-- Buscar por identificación -->
                    <form method="get" action="/Prestamo/Gestion/BuscarPorIdentificacion">
                        <div class="row mb-4">
                            <div class="col-12 col-md-9 mb-3 mb-md-0">
                                <input type="text" name="nroIdentificacion" class="form-control p-2" placeholder="Buscar por identificación..." />
                            </div>
                            <div class="col-12 col-md-3">
                                <button class="btn btn-primary w-100 p-2" type="submit">Buscar</button>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="card-body">

                    <!-- Resultado del usuario -->
                    @{
                        var listPres = ViewBag.Prestamos as List<Prestamo_Dto>;
                    }

                    @if (listPres != null && listPres.Any())
                    {
                        <table id="datatablesSimple" class="table table-striped table-hover table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col"></th>
                                    <th scope="col">Fecha Inicio</th>
                                    <th scope="col">Fecha Final</th>
                                    <th scope="col">Monto</th>
                                    <th scope="col">Cuotas</th>
                                    <th scope="col">Saldo</th>
                                    <th scope="col">Estado</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var solicitud in listPres)
                                {
                                    <tr>
                                        <th scope="row" class="d-flex justify-content-center align-items-center">
                                            <button type="button" class="btn btn-primary btn-sm" title="Ver"
                                                    onclick="pagarPrestamo(@solicitud.ID,@solicitud.ID_ESTADO)">
                                                <i class="bi bi-eye-fill"></i>
                                            </button>
                                        </th>
                                        <td>@solicitud.FECHA_INICIO.ToString("dd/MM/yyyy")</td>
                                        <td>@solicitud.FECHA_FIN.ToString("dd/MM/yyyy")</td>
                                        <td>@(solicitud.MONTO.ToString("C", new System.Globalization.CultureInfo("es-CO")) ?? "N/A")</td>
                                        <td>@solicitud.NUMERO_CUOTAS.ToString("N0")</td>
                                        <td>@(solicitud.SALDO_MONTO.ToString("C", new System.Globalization.CultureInfo("es-CO")) ?? "N/A")</td>
                                        <td>@solicitud.ESTADO</td>                                        
                                    </tr>
                                }
    
                            </tbody>

                        </table>
                    }                    
                </div>
            </div>

        </div>

    </div>


    <div id="sweetAlertData"
         data-icon="@(TempData["SweetAlert"] ?? ViewBag.SweetAlert)"
         data-titulo="@(TempData["Titulo"] ?? ViewBag.Titulo)"
         data-mensaje="@(TempData["Mensaje"] ?? ViewBag.Mensaje)">
        @*  data-limpiar="@((ViewBag.LimpiarFormulario ?? false).ToString().ToLower())"> *@
    </div>
</body>



