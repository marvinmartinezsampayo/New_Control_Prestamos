@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registro de Usuario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="~/lib/Administracion/css/AdministracionStyles.css" rel="stylesheet" />
    <script src="~/lib/Administracion/js/GestionUsuarios.js"></script>
</head>
<body class="bg-light">
    <div class="container py-3">
        <div class="card shadow-lg">
            <div class="card-body">
                <h2 class="text-center mb-4 titulo-animado fw-bold ">Registro de Usuario</h2>
                <form method="post" enctype="multipart/form-data" id="miFormulario">
                    <div class="row g-3">
                        <!-- Cada input ocupa 4 columnas -->
                        <div class="col-md-4">
                            <label for="usuarioEmpresarial" class="form-label">Usuario Empresarial</label>
                            <input type="text" class="form-control" id="usuarioEmpresarial" name="USUARIO_EMPRESARIAL" required>
                        </div>

                        <div class="col-md-4">
                            <label for="ID_TIPO_IDENTIFICACION" class="form-label">Tipo Identificación</label>
                            @Html.DropDownList("ID_TIPO_IDENTIFICACION",
                                     ViewBag.listTipoDocumentos as SelectList,
                                     "Seleccione...",
                                     new
                                     {
                                         @class = "form-select",
                                         @id = "tipoIdentificacion",
                                         required = "required"
                                     })
                        </div>

                        <div class="col-md-4">
                            <label for="nroIdentificacion" class="form-label">No. Identificación</label>
                            <input type="number" class="form-control" id="nroIdentificacion" name="NRO_IDENTIFICACION" required>
                        </div>

                        <div class="col-md-4">
                            <label for="primerNombre" class="form-label">Primer Nombre</label>
                            <input type="text" class="form-control" id="primerNombre" name="PRIMER_NOMBRE" required>
                        </div>
                        <div class="col-md-4">
                            <label for="segundoNombre" class="form-label">Segundo Nombre</label>
                            <input type="text" class="form-control" id="segundoNombre" name="SEGUNDO_NOMBRE">
                        </div>
                        <div class="col-md-4">
                            <label for="primerApellido" class="form-label">Primer Apellido</label>
                            <input type="text" class="form-control" id="primerApellido" name="PRIMER_APELLIDO" required>
                        </div>

                        <div class="col-md-4">
                            <label for="segundoApellido" class="form-label">Segundo Apellido</label>
                            <input type="text" class="form-control" id="segundoApellido" name="SEGUNDO_APELLIDO">
                        </div>
                        <div class="col-md-4">
                            <label for="email" class="form-label">Correo Electrónico</label>
                            <input type="email" class="form-control" id="email" name="EMAIL" required>
                        </div>
                        <div class="col-md-4">
                            <label for="telefono" class="form-label">Teléfono</label>
                            <input type="tel" class="form-control" id="telefono" name="TELEFONO" required>
                        </div>

                        <!-- Habilitado y contraseña ocupan filas separadas dentro del grid -->
                        <div class="col-md-4 d-flex align-items-center">
                            <div class="form-check form-switch w-100 text-center">
                                <input class="form-check-input" type="checkbox" id="habilitado" name="HABILITADO" checked>
                                <label class="form-check-label" for="habilitado">Habilitado</label>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <label for="newcontrasena" class="form-label">Contraseña</label>
                            <input type="password" class="form-control" id="newcontrasena" name="NEWCONTRASENA" required>
                            <div class="form-text">8–20 caracteres, con letras y números.</div>
                        </div>

                        <!-- Foto y botón -->
                        <div class="col-md-8">
                            <label for="foto" class="form-label">Foto del Empleado</label>
                            <input class="form-control" type="file" id="foto" name="FOTO" accept="image/jpeg,image/png">
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary btn-lg btn-registrar w-100">Registrar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div id="sweetAlertData"
         data-icon="@TempData["SweetAlert"]"
         data-titulo="@TempData["Titulo"]"
         data-mensaje="@TempData["Mensaje"]"
         data-limpiar="@((ViewBag.LimpiarFormulario ?? false).ToString().ToLower())">
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.bundle.min.js"></script>
   
   
</body>
</html>
