@using Comun.DTO.Generales
@{

    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Administrar Usuarios";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Roles Usuario</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="~/lib/Administracion/css/AdministracionStyles.css" rel="stylesheet" />
    <script src="~/lib/Administracion/js/AdministrarUsuarios.js"></script>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4 fw-bold">Roles Usuarios</h2>

        <!-- Buscar por identificación -->
        <form method="get" action="/Administracion/AdministraUsuarios/BuscarPorIdentificacion">
            <div class="row mb-4">
                <div class="col-12 col-md-9 mb-3 mb-md-0">
                    <input type="text" name="nroIdentificacion" class="form-control p-2" placeholder="Buscar por identificación..." />
                </div>
                <div class="col-12 col-md-3">
                    <button class="btn btn-primary w-100 p-2" type="submit">Buscar</button>
                </div>
            </div>
        </form>

        <!-- Resultado del usuario -->
        @{
            var usuario = ViewBag.Usuario as UsuarioDto;
        }

        @if (usuario != null)
        {
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center mb-3">
                            <img src="@(string.IsNullOrEmpty(ViewBag.FotoBase64) ? "/IMG/Imagenes/default-user.png" : ViewBag.FotoBase64)"
                                 class="img-fluid rounded border" alt="Foto del usuario" style="max-height: 180px;" />

                        </div>
                        <div class="col-md-9">
                            <div class="row mb-2">
                                <div class="col-sm-4 fw-bold">Nombre completo:</div>
                                <div class="col-sm-8">@usuario.PRIMER_NOMBRE @usuario.SEGUNDO_NOMBRE @usuario.PRIMER_APELLIDO</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4 fw-bold">Usuario:</div>
                                <div class="col-sm-8">@usuario.USUARIO_EMPRESARIAL</div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-sm-4 fw-bold">Identificación:</div>
                                <div class="col-sm-8">@usuario.NRO_IDENTIFICACION</div>
                            </div>
                            <div class="row mb-4">
                                <div class="col-sm-4 fw-bold">Teléfono:</div>
                                <div class="col-sm-8">@usuario.TELEFONO</div>
                            </div>
                            @* ver los roles del usuario  *@
                            @if (ViewBag.RolesUsuario != null && ((List<Roles_X_UsuarioDto>)ViewBag.RolesUsuario).Any())
                            {
                                <ul>
                                    @foreach (var rol in (List<Roles_X_UsuarioDto>)ViewBag.RolesUsuario)
                                    {
                                        <li>@rol.ROL_STR</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p>Este usuario aún no tiene roles asignados.</p>
                            }


                            <form method="post" action="/Administracion/AdministraUsuarios/AsignarRol">
                                <div class="mb-3">
                                    <label for="rol" class="form-label">Asignar rol:</label>
                                    @Html.DropDownList("rolSeleccionado", ViewBag.Roles as SelectList, "-- Selecciona un rol --", new { @class = "form-select", required = "required" })
                                </div>

                                <div class="text-end">
                                    <button type="submit" class="btn btn-success">Guardar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
    <!--aqui los mensajes de que todo salio bien o mal -->
    <div id="sweetAlertData"
         data-icon="@TempData["SweetAlert"]"
         data-titulo="@TempData["Titulo"]"
         data-mensaje="@TempData["Mensaje"]"
         data-limpiar="@((ViewBag.LimpiarFormulario ?? false).ToString().ToLower())">
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
